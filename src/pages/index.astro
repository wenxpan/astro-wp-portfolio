---
import BaseLayout from "@layouts/BaseLayout.astro"
import { Content as AboutText } from "./_about-summary.md"
import Prose from "@/components/Prose.astro"
import { Image } from "astro:assets"
import AvatarImg from "@images/avatar.png"
import ProjectPreviewList from "@/components/ProjectPreviewList.astro"
import { getCollection } from "astro:content"

const description = "Full-stack web developer"

const featuredProjects = await getCollection(
  "projects",
  ({ data }) => data.isFeatured
)

// const posts = await getCollection("posts")
// const latestPosts = posts
//   .sort((a, b) => {
//     return new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
//   })
//   .slice(0, 2)
---

<BaseLayout description={description}>
  <div
    class="flex flex-col md:flex-row gap-8 w-full transition-all pb-4 items-center"
  >
    <div class="flex md:flex-none justify-center">
      <div
        class="bg-accent dark:bg-dark-accent rounded-full md:rounded-md flex items-center"
      >
        <Image
          src={AvatarImg}
          alt="Avatar - Wenxuan Pan"
          class="rounded-full md:rounded-none w-[12rem] aspect-auto p-4"
        />
      </div>
    </div>
    <div class="flex-1 text-center md:text-left self-start">
      <Prose>
        <AboutText />
      </Prose>
      <a
        href="https://github.com/wenxpan"
        class="text-primary hover:underline italic">My Github Profile</a
      >
    </div>
  </div>
  <div class="border-t">
    <h2>Recent Projects</h2>
    <ProjectPreviewList projects={featuredProjects} />
    <a class="action__redirect" href="/projects" title="All Posts"
      >All Projects &rarr;</a
    >
  </div>
  <!-- <div class="border-t">
    <h2>Recent Posts</h2>
    <PostPreviewList posts={latestPosts} />
    <a class="action__redirect" href="/blog" title="All Posts"
      >All Posts &rarr;</a
    >
  </div> -->
</BaseLayout>

<style>
  h2,
  .action__redirect {
    @apply text-sm font-bold uppercase py-4 tracking-wider opacity-60 dark:opacity-70;
  }

  .action__redirect {
    @apply hover:underline text-end block;
  }

  h3 {
    @apply text-xl font-semibold;
  }
</style>
